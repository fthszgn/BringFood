<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#59144A9C">

        <ImageView
            android:id="@+id/bagImageView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@mipmap/ic_launcher_round"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/bagNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:padding="5dp"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/bagImageView"
            app:layout_constraintTop_toTopOf="@+id/bagImageView" />

        <TextView
            android:id="@+id/bagPriceTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:padding="5dp"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="@+id/bagImageView"
            app:layout_constraintStart_toEndOf="@+id/bagImageView" />

        <Button
            android:id="@+id/deleteButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="@string/sil"
            app:layout_constraintStart_toEndOf="@+id/adetTextView"
            app:layout_constraintTop_toBottomOf="@+id/bagNameTextView" />

        <TextView
            android:id="@+id/adetTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@+id/bagNameTextView"
            app:layout_constraintTop_toBottomOf="@+id/bagNameTextView" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>
